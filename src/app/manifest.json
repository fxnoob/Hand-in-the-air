{
  "name": "Hand in the Air",
  "version": "0.0.15",
  "manifest_version": 2,
  "description": "swipe hand gesture recognition",
  "icons": {
    "16": "images/16x16.png",
    "128": "images/128x128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "permissions": ["tabs", "activeTab", "storage", "*://*/*"],
  "browser_action": {
    "default_icon": {
      "16": "images/16x16.png",
      "48": "images/48x48.png"
    },
    "default_title": "Swipe hand in the air"
  },
  "options_page": "option.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.bundle.js"],
      "run_at": "document_end"
    }
  ]
}
